# /etc/cron.d/remote-weather-access-cron: crontab entries for the remote-weather-access package

SHELL=/bin/sh
PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin

*/10 * * * * weather-daemon weatherplot ALL /etc/remote-weather-access/weatherplot.ini > /dev/null 2>&1
0 * * * * weather-daemon export-weatherdata /var/lib/remote-weather-access/weather.db /var/lib/remote-weather-access/export > /dev/null 2>&1
